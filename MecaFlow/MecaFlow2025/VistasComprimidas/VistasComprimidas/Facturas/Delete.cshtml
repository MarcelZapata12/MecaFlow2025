@model MecaFlow2025.Models.Factura
@using System.Globalization
@{
    ViewData["Title"] = "Eliminar Factura";
    var cr = new CultureInfo("es-CR");
    Layout = null;
}
<h1>Eliminar Factura</h1>
<hr />
<dl class="row">
    <dt class="col-sm-2">Factura #</dt>
    <dd class="col-sm-10">@Model.FacturaId</dd>
    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy")</dd>
    <dt class="col-sm-2">Cliente</dt>
    <dd class="col-sm-10">@Model.Cliente?.Nombre</dd>
    <dt class="col-sm-2">Vehículo</dt>
    <dd class="col-sm-10">@Model.Vehiculo?.Placa</dd>
    <dt class="col-sm-2">Monto Total</dt>
    <dd class="col-sm-10">@Model.MontoTotal.ToString("C", cr)</dd>
    <dt class="col-sm-2">Método de pago</dt>
    <dd class="col-sm-10">@Model.Metodo</dd>
</dl>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="FacturaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>