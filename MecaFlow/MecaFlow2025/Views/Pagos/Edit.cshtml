@model MecaFlow2025.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #fff;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        animation: fadeInUp 0.6s ease;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control, .form-select {
        background-color: #2c2c2c;
        border: 1px solid #555;
        color: #fff;
        border-radius: 0.5rem;
    }

    .btn-submit {
        transition: transform 0.2s ease;
    }

        .btn-submit:hover {
            transform: scale(1.05);
        }
</style>

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-white animate__animated animate__fadeInDown">
            <i class="bi bi-pencil-square me-2"></i>Editar Pago
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container animate__animated animate__fadeInUp">
                <form asp-action="Edit">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PagoId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FacturaId" class="form-label">Factura</label>
                        <select asp-for="FacturaId" class="form-select" asp-items="ViewBag.FacturaId">
                            <option value="">-- Seleccione factura --</option>
                        </select>
                        <span asp-validation-for="FacturaId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
                        <input asp-for="FechaPago" type="date" class="form-control" />
                        <span asp-validation-for="FechaPago" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
                        <input asp-for="MetodoPago" class="form-control" />
                        <span asp-validation-for="MetodoPago" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-submit px-4">
                            <i class="bi bi-save me-1"></i>Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
