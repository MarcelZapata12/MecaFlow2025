@model MecaFlow2025.Models.Pago
@{
    ViewData["Title"] = "Detalle de Pago";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #fff;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .details-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        animation: fadeInUp 0.6s ease;
    }

    dt {
        color: #66ccff;
    }

    .btn-submit {
        transition: transform 0.2s ease;
    }

        .btn-submit:hover {
            transform: scale(1.05);
        }
</style>

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-white animate__animated animate__fadeInDown">
            <i class="bi bi-receipt-cutoff me-2"></i>Detalle de Pago
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="details-container animate__animated animate__fadeInUp">
                <dl class="row">
                    <dt class="col-sm-4"># Pago</dt>
                    <dd class="col-sm-8">@Model.PagoId</dd>

                    <dt class="col-sm-4">Factura</dt>
                    <dd class="col-sm-8">#@Model.FacturaId</dd>

                    <dt class="col-sm-4">Cliente</dt>
                    <dd class="col-sm-8">@Model.Factura.Cliente.Nombre</dd>

                    <dt class="col-sm-4">Vehículo</dt>
                    <dd class="col-sm-8">@Model.Factura.Vehiculo.Placa</dd>

                    <dt class="col-sm-4">Fecha de Pago</dt>
                    <dd class="col-sm-8">@Model.FechaPago.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Método de Pago</dt>
                    <dd class="col-sm-8">@Model.MetodoPago</dd>
                </dl>

                <div class="d-flex justify-content-between">
                    <a asp-action="Edit" asp-route-id="@Model.PagoId" class="btn btn-primary btn-submit px-4">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-submit px-4">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
