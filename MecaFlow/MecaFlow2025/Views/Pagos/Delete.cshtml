@model MecaFlow2025.Models.Pago
@{
    ViewData["Title"] = "Eliminar Pago";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #fff;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .delete-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        animation: fadeInUp 0.6s ease;
    }

    .btn-submit {
        transition: transform 0.2s ease;
    }

        .btn-submit:hover {
            transform: scale(1.05);
        }
</style>

<div class="container py-5">
    <div class="text-center mb-4">
        <h2 class="text-white animate__animated animate__fadeInDown">
            <i class="bi bi-trash3-fill me-2"></i>Eliminar Pago
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="delete-container animate__animated animate__fadeInUp">
                <div class="alert alert-warning text-dark">
                    <strong>¿Está seguro que desea eliminar el pago <span class="text-danger">#@Model.PagoId</span> correspondiente a la factura <span class="text-danger">#@Model.FacturaId</span>?</strong>
                </div>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PagoId" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger btn-submit px-4">
                            <i class="bi bi-check-circle me-1"></i>Confirmar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-submit px-4">
                            <i class="bi bi-x-circle me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
