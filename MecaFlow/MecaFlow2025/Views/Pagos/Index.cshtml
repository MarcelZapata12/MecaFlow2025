@model IEnumerable<MecaFlow2025.Models.Pago>
@{
    ViewData["Title"] = "Pagos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        /* background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); */
        color: #fff;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .pagos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

        .pagos-header h2 {
            color: #fff;
            margin: 0;
        }

    .btn-nuevo-pago {
        animation: pulse 2s infinite;
    }

    .table-container {
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        animation: fadeInUp 0.6s ease;
    }

    table {
        color: #fff;
    }

    thead th {
        color: #66ccff;
        border-bottom: 2px solid #66ccff;
    }

    tbody tr:hover {
        background-color: rgba(255, 255, 255, 0.05);
        transition: background 0.3s ease;
    }

    .btn-action {
        margin-right: 0.4rem;
        transition: transform 0.2s ease;
    }

        .btn-action:hover {
            transform: scale(1.1);
        }

    .filter-input {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: white;
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        width: 100%;
        max-width: 300px;
    }
</style>

<div class="container py-5">
    <div class="pagos-header">
        <h2><i class="bi bi-cash-coin me-2"></i>Pagos Registrados</h2>
        <input type="text" id="filtroPagos" class="filter-input" placeholder="Buscar cliente, placa o método..." />
        <a asp-action="Create" class="btn btn-success btn-nuevo-pago">
            <i class="bi bi-plus-circle me-1"></i> Registrar Pago
        </a>
    </div>

    <div class="table-container">
        <table class="table table-borderless table-hover align-middle" id="tablaPagos">
            <thead>
                <tr>
                    <th># Pago</th>
                    <th>Factura</th>
                    <th>Cliente</th>
                    <th>Vehículo</th>
                    <th>Fecha Pago</th>
                    <th>Método</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td><strong>@p.PagoId</strong></td>
                        <td><span class="text-info">#@p.FacturaId</span></td>
                        <td>@p.Factura.Cliente.Nombre</td>
                        <td>@p.Factura.Vehiculo.Placa</td>
                        <td>@p.FechaPago.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge bg-primary">@p.MetodoPago</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@p.PagoId" class="btn btn-sm btn-info btn-action">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@p.PagoId" class="btn btn-sm btn-warning btn-action">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.PagoId" class="btn btn-sm btn-danger btn-action">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("filtroPagos").addEventListener("input", function () {
            const valor = this.value.toLowerCase();
            const filas = document.querySelectorAll("#tablaPagos tbody tr");

            filas.forEach(fila => {
                const textoFila = fila.innerText.toLowerCase();
                fila.style.display = textoFila.includes(valor) ? "" : "none";
            });
        });
    </script>
}
