@model MecaFlow2025.Models.ReportesFinanciero
@{
    ViewBag.Title = "Eliminar Reporte";
}

<h2>@ViewBag.Title</h2>

<h5>¿Seguro que deseas eliminar este registro?</h5>

<div class="mb-3">
    <strong>Fecha:</strong> @Model.Fecha<br />
    <strong>Ingresos:</strong> @($"{Model.TotalIngresos:N2}")<br />
    <strong>Gastos:</strong> @($"{Model.TotalGastos:N2}")<br />
    <strong>Observaciones:</strong> @Model.Observaciones
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReporteId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
