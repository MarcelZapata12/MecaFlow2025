@model IEnumerable<MecaFlow2025.Models.ReportesFinanciero>
@{
    ViewData["Title"] = "Reportes Financieros";
}

<h1>Reportes Financieros</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Nuevo Reporte</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Ingresos</th>
            <th>Gastos</th>
            <th>Observaciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@r.TotalIngresos?.ToString("C")</td>
                <td>@r.TotalGastos?.ToString("C")</td>
                <td>@r.Observaciones</td>
                <td>
                    <a asp-action="Details" asp-route-id="@r.ReporteId" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@r.ReporteId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@r.ReporteId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
