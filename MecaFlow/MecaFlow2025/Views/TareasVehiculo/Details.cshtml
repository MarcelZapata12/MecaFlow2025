@model MecaFlow2025.Models.TareasVehiculo
@{
    ViewData["Title"] = "Detalles de Tarea";
}

<h1>Detalles</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Tarea</dt>
    <dd class="col-sm-9">@Model.TareaId</dd>

    <dt class="col-sm-3">Placa</dt>
    <dd class="col-sm-9">@Model.Vehiculo?.Placa</dd>

    <dt class="col-sm-3">Sector</dt>
    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Sector) ? Model.Sector : "-")</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>

    <dt class="col-sm-3">Fecha registro</dt>
    <dd class="col-sm-9">@Model.FechaRegistro?.ToString("dd/MM/yyyy")</dd>


    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">@(Model.Realizada ? "Realizada" : "Pendiente")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.TareaId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
