@model MecaFlow2025.Models.TareasVehiculo
@{
    ViewData["Title"] = "Editar Tarea";
}

<h1>Editar Tarea</h1>
<hr />

<div class="row">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Edit" asp-route-id="@Model.TareaId" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TareaId" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="VehiculoId" class="form-label">Vehículo</label>
                <select asp-for="VehiculoId" class="form-select" asp-items="@(ViewBag.VehiculoId as SelectList)"></select>
                <span asp-validation-for="VehiculoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sector" class="form-label">Sector</label>
                <select asp-for="Sector" class="form-select" asp-items="@(ViewBag.Sectores as SelectList)">
                    <option value="">— Selecciona un sector —</option>
                </select>
                <span asp-validation-for="Sector" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" rows="3" maxlength="200"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            @* Sin campo FechaRegistro (solo lectura en Details) *@

            <div class="form-check mb-3">
                <input asp-for="Realizada" class="form-check-input" />
                <label asp-for="Realizada" class="form-check-label">Realizada</label>
            </div>

            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
