@model MecaFlow2025.Models.TareasVehiculo
@{
    ViewData["Title"] = "Editar Tarea";
    Layout = null; // para que cargue perfecto dentro del modal
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
        color: #f8f9fa;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-container {
        background-color: #1f1f1f;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0,0,0,.3);
        animation: fadeInUp .6s ease-in-out;
        max-width: 600px;
        margin: 4rem auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #ffffff;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .form-control, .form-select, textarea.form-control {
        background-color: #2c2c2c;
        color: #fff;
        border: 1px solid #444;
    }

        .form-control:focus, .form-select:focus, textarea.form-control:focus {
            background-color: #2c2c2c;
            border-color: #66afe9;
            box-shadow: 0 0 0 .2rem rgba(102,175,233,.25);
        }

    .form-check-input {
        background-color: #2c2c2c;
        border: 1px solid #444;
    }

        .form-check-input:checked {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }
</style>

<div class="form-container">
    <h1><i class="bi bi-pencil-square me-2"></i>Editar Tarea</h1>

    <div class="row">
        <div class="col-12">
            <!-- LÓGICA EXACTA QUE PEDISTE -->
            <form asp-action="Edit" asp-route-id="@Model.TareaId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TareaId" />

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="VehiculoId" class="form-label">Vehículo</label>
                    <select asp-for="VehiculoId" class="form-select" asp-items="@(ViewBag.VehiculoId as SelectList)"></select>
                    <span asp-validation-for="VehiculoId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Sector" class="form-label">Sector</label>
                    <select asp-for="Sector" class="form-select" asp-items="@(ViewBag.Sectores as SelectList)">
                        <option value="">— Selecciona un sector —</option>
                    </select>
                    <span asp-validation-for="Sector" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3" maxlength="200"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                @* Sin campo FechaRegistro (solo lectura en Details) *@

                <div class="form-check mb-4">
                    <input asp-for="Realizada" class="form-check-input" id="RealizadaChk" />
                    <label class="form-check-label" for="RealizadaChk">Realizada</label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i>Guardar cambios
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
