@model IEnumerable<MecaFlow2025.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="bi bi-people-fill"></i> Clientes
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Cliente
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th>Fecha Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Correo</td>
                                <td>@item.Telefono</td>
                                <td>@item.Direccion</td>
                                <td>@(item.FechaRegistro.HasValue ? item.FechaRegistro.Value.ToString("yyyy-MM-dd") : "")</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-sm btn-info me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
