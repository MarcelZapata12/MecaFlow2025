@model MecaFlow2025.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registro";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    /* Lienzo centrado a pantalla completa */
    .auth-viewport {
        min-height: calc(100vh - 120px); /* margen por header/footer del layout */
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Orbes decorativos suaves */
    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(50px);
        opacity: .25;
        pointer-events: none;
    }

    .orb-1 {
        width: 300px;
        height: 300px;
        background: #0d6efd;
        top: 8%;
        left: 10%;
    }

    .orb-2 {
        width: 240px;
        height: 240px;
        background: #20c997;
        bottom: 10%;
        right: 15%;
    }

    .orb-3 {
        width: 180px;
        height: 180px;
        background: #6f42c1;
        top: 55%;
        left: 35%;
        opacity: .18;
    }

    /* Card “glass” */
    .auth-card {
        background: rgba(15, 15, 15, 0.85);
        border: 1px solid rgba(255,255,255,.08);
        backdrop-filter: blur(6px);
        box-shadow: 0 20px 60px rgba(0,0,0,.45);
        border-radius: 1rem;
        overflow: hidden;
        width: 100%;
        max-width: 760px;
    }

    .auth-header {
        background: linear-gradient(90deg,#0d6efd, #0aa2c0);
        color: #fff;
        padding: 1rem 1.25rem;
    }

        .auth-header h3 {
            margin: 0;
            font-weight: 700;
        }

        .auth-header small {
            opacity: .95;
        }

    .auth-body {
        padding: 1.25rem;
        background-color: #121416;
        color: #e9ecef;
    }

    .auth-footer {
        padding: .85rem 1.25rem;
        background: #0f1214;
        color: #98a2ad;
        border-top: 1px solid rgba(255,255,255,.06);
    }

    .form-label {
        color: #cfe2ff;
        font-weight: 600;
    }

    .input-group-text {
        background: #1c1f23;
        color: #adb5bd;
        border-color: #2b3035;
    }

    .form-control, .form-select {
        background: #171a1d;
        color: #f8f9fa;
        border-color: #2b3035;
    }

        .form-control::placeholder {
            color: #6c757d;
        }

        .form-control:focus, .form-select:focus {
            background: #1a1d21;
            color: #fff;
            border-color: #66afe9;
            box-shadow: 0 0 0 .2rem rgba(102,175,233,.2);
        }

    .btn-gradient {
        background: linear-gradient(90deg,#0d6efd,#0aa2c0);
        border: 0;
    }

        .btn-gradient:hover {
            filter: brightness(1.05);
        }

    .toggle-eye {
        cursor: pointer;
        user-select: none;
    }

    .validation-summary-errors ul {
        margin: 0 0 .75rem 1rem;
    }
</style>

<div class="auth-viewport">
    <!-- orbes decorativos -->
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>
    <div class="orb orb-3"></div>

    <div class="auth-card">
        <div class="auth-header d-flex align-items-center gap-2">
            <i class="bi bi-person-plus-fill fs-3"></i>
            <div>
                <h3>Registro</h3>
                <small>Crear nueva cuenta</small>
            </div>
        </div>

        <div class="auth-body">
            <!-- resumen de validaciones -->
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

            <form asp-action="Register" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingresa tu apellido" />
                        </div>
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cedula" class="form-label">Cédula</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                            <input asp-for="Cedula" class="form-control" placeholder="123456789" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label">Teléfono</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Telefono" class="form-control" placeholder="8888-8888" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contrasena" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Contrasena" class="form-control" type="password" id="pwd" placeholder="Mínimo 6 caracteres" />
                            <span class="input-group-text toggle-eye" data-target="#pwd">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Contrasena" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input asp-for="ConfirmarContrasena" class="form-control" type="password" id="pwd2" placeholder="Repite tu contraseña" />
                            <span class="input-group-text toggle-eye" data-target="#pwd2">
                                <i class="bi bi-eye"></i>
                            </span>
                        </div>
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-grid">
                    <button class="btn btn-gradient btn-lg">
                        <i class="bi bi-person-plus me-1"></i> Registrarse
                    </button>
                </div>
            </form>
        </div>

        <div class="auth-footer text-center">
            ¿Ya tienes una cuenta?
            <a asp-action="Login" class="link-primary text-decoration-underline">Iniciar Sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle mostrar/ocultar contraseña
        document.querySelectorAll('.toggle-eye').forEach(btn => {
            btn.addEventListener('click', () => {
                const target = document.querySelector(btn.getAttribute('data-target'));
                if (!target) return;
                const isPwd = target.getAttribute('type') === 'password';
                target.setAttribute('type', isPwd ? 'text' : 'password');
                const icon = btn.querySelector('i');
                icon.classList.toggle('bi-eye');
                icon.classList.toggle('bi-eye-slash');
                target.focus();
            });
        });
    </script>
}
