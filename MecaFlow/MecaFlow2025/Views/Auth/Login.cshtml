@model MecaFlow2025.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<style>
    body {
       /*  background: linear-gradient(135deg, #0f2027, #203a43, #2c5364); */
        color: #f8f9fa;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    .card {
        background-color: #1f1f1f;
        border: 1px solid #2c2c2c;
        color: white;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,.3);
        }

    .form-control {
        background-color: #2c2c2c;
        border: 1px solid #444;
        color: #fff;
    }

        .form-control:focus {
            background-color: #2c2c2c;
            color: #fff;
            border-color: #66afe9;
            box-shadow: none;
        }

    /* Botón de ojo dentro del input-group (dark theme) */
    .btn-eye {
        background-color: #2c2c2c;
        border-color: #444;
        color: #adb5bd;
    }

        .btn-eye:hover {
            color: #fff;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        transition: all .3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #212529;
        transition: all .3s ease;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            color: #212529;
        }

    .btn i {
        transition: transform .2s ease;
    }

    .btn:hover i {
        transform: scale(1.2);
    }

    .forgot-password-link {
        color: #ffc107;
        text-decoration: none;
        font-weight: 500;
        transition: color .3s ease;
    }

        .forgot-password-link:hover {
            color: #ffcd39;
            text-decoration: underline;
        }
</style>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row w-100">
        <div class="col-md-6 col-lg-5 col-xl-4 mx-auto">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        Iniciar Sesión
                    </h2>
                    <p class="mb-0 opacity-75">Accede a tu cuenta</p>
                </div>
                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold">
                                <i class="bi bi-envelope-fill me-1"></i>Correo Electrónico
                            </label>
                            <input asp-for="Correo" type="email" class="form-control form-control-lg" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Contraseña con input-group (icono centrado) -->
                        <div class="mb-4">
                            <label asp-for="Contrasena" class="form-label fw-bold">
                                <i class="bi bi-lock-fill me-1"></i>Contraseña
                            </label>

                            <div class="input-group input-group-lg">
                                <input asp-for="Contrasena" id="contrasenaInput" type="password"
                                       class="form-control" placeholder="Ingrese su contraseña"
                                       autocomplete="current-password" />
                                <button type="button" id="btnTogglePwd" class="btn btn-eye" aria-label="Mostrar u ocultar contraseña">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>

                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </button>
                        </div>
                    </form>

                    <!-- Botón de restablecer contraseña -->
                    <div class="text-center mb-3">
                        <a asp-action="ForgotPassword" class="forgot-password-link">
                            <i class="bi bi-key-fill me-1"></i>¿Olvidaste tu contraseña?
                        </a>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">
                            ¿No tienes una cuenta?
                            <a asp-action="Register" class="text-success text-decoration-none fw-bold">
                                <i class="bi bi-person-plus-fill me-1"></i>Regístrate aquí
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btn = document.getElementById('btnTogglePwd');
            const inp = document.getElementById('contrasenaInput');
            btn.addEventListener('click', () => {
                const isPwd = inp.type === 'password';
                inp.type = isPwd ? 'text' : 'password';
                const ico = btn.querySelector('i');
                ico.classList.toggle('bi-eye', !isPwd);
                ico.classList.toggle('bi-eye-slash', isPwd);
            });
        });
    </script>
}
