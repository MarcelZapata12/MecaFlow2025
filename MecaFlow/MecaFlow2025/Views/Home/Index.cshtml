@{
    ViewData["Title"] = "Inicio";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #0f2027; /* ← fondo sólido */
        color: #f8f9fa;
    }

    .card {
        background-color: #1f1f1f;
        border: 1px solid #2c2c2c;
        color: white;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

        .card i {
            background-color: #0d6efd;
            color: white;
            border-radius: 50%;
            font-size: 1.5rem;
            transition: background 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 48px;
            height: 48px;
            margin: 0 auto 0.75rem auto; /* ← centrado horizontal + espacio abajo */
            padding: 20px;
            border-radius: 50%;
            margin-bottom: 15px;
            font-size: 2rem;
            transition: background 0.3s;
        }

        .card:hover i {
            background-color: #6610f2;
        }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out forwards;
        opacity: 0;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .text-muted {
        color: #adb5bd !important;
    }

    .logo-panel {
        margin-top: 2rem; /* separación del logo con la barra */
        max-width: 200px;
        filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.5));
        border-radius: 10px;
    }

    /* Estilo especial para la tarjeta del chatbot */
    .card.bg-chatbot {
        background-color: #1e3a57;
        border-color: #2a4d7a;
    }

        .card.bg-chatbot:hover {
            background-color: #254b75;
        }

        .card.bg-chatbot i {
            background-color: #4e9af1;
        }

        .card.bg-chatbot:hover i {
            background-color: #3a7bc8;
        }
</style>

<div class="text-center mb-5">
    <img src="~/images/logo-mecaflow.png" alt="MecaFlow" class="img-fluid mx-auto d-block rounded shadow" style="max-width: 200px;" />
    <h1 class="fw-bold display-4 mt-3">Panel Principal</h1>
    <p class="text-secondary fs-5">Accede a cada módulo del sistema con un solo click</p>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 fade-in">
    <div class="col">
        <a asp-controller="Clientes" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-person-lines-fill"></i>
                <h5 class="card-title fw-semibold">Clientes</h5>
                <p class="card-text text-muted">Gestión de clientes registrados.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="Vehiculos" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-car-front-fill"></i>
                <h5 class="card-title fw-semibold">Vehículos</h5>
                <p class="card-text text-muted">Administrar vehículos y su historial.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="Diagnosticos" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-heart-pulse-fill"></i>
                <h5 class="card-title fw-semibold">Diagnósticos</h5>
                <p class="card-text text-muted">Registrar diagnósticos de taller.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="Empleados" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-people-fill"></i>
                <h5 class="card-title fw-semibold">Empleados</h5>
                <p class="card-text text-muted">Ver sección de empleados.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="Asistencias" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-calendar-check-fill"></i>
                <h5 class="card-title fw-semibold">Asistencias</h5>
                <p class="card-text text-muted">Entradas y salidas de personal.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="ReportesFinancieros" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-bar-chart-fill"></i>
                <h5 class="card-title fw-semibold">Reportes</h5>
                <p class="card-text text-muted">Ver y crear reportes económicos.</p>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-controller="TareasVehiculo" asp-action="Index" class="text-decoration-none">
            <div class="card h-100 text-center p-3">
                <i class="bi bi-list-task"></i>
                <h5 class="card-title fw-semibold">Tareas</h5>
                <p class="card-text text-muted">Ver y crear tareas sobre vehículos.</p>
            </div>
        </a>
    </div>
</div>
