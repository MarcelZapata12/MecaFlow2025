@model IEnumerable<MecaFlow2025.Models.Asistencia>

@{
    ViewData["Title"] = "Registro de Asistencias";
    var isAdminReadOnly = (bool)ViewBag.IsAdminReadOnly;
}

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #f8f9fa;
    }

    .card {
        background-color: #1f1f1f;
        border: 1px solid #2c2c2c;
        color: white;
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .table th {
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .badge {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
        border-radius: 0.5rem;
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 16px;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-clock"></i> Registro de Asistencias
            </h4>
            @if (!isAdminReadOnly)
            {
                <a href="@Url.Action("RegistroPersonal")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Registrar Asistencia
                </a>
            }
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (isAdminReadOnly)
            {
                @* <div class="alert alert-info" role="alert">
                    Eres un administrador. Puedes ver todos los registros de asistencias, pero no puedes modificarlos.
                </div> *@
                
                <form asp-action="Index" method="get" class="mb-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="nombre" class="form-label">Nombre del Empleado</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="@ViewBag.CurrentNombre" placeholder="Buscar por nombre...">
                        </div>
                        <div class="col-md-3">
                            <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
                            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" value="@ViewBag.CurrentFechaInicio?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-3">
                            <label for="fechaFin" class="form-label">Fecha de Fin</label>
                            <input type="date" class="form-control" id="fechaFin" name="fechaFin" value="@ViewBag.CurrentFechaFin?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-light w-100 me-2">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-light w-100">
                                <i ></i> Limpiar
                            </a>
                        </div>
                    </div>
                </form>
            }

            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover text-center align-middle">
                    <thead>
                        <tr>
                            <th>Empleado</th>
                            <th>Fecha</th>
                            <th>Hora Llegada</th>
                            <th>Hora Salida</th>
                            <th>Horas Trabajadas</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                @item.Empleado.Nombre.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-bold">@item.Empleado.Nombre</div>
                                                <small class="text-muted">@item.Empleado.Puesto</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@item.Fecha.ToString("dd/MM/yyyy")</span><br>
                                        <small class="text-muted">@item.Fecha.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</small>
                                    </td>
                                    <td>
                                        @if (item.HoraEntrada.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-sign-in-alt"></i> @item.HoraEntrada.Value.ToString("HH:mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin registro</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.HoraSalida.HasValue)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-sign-out-alt"></i> @item.HoraSalida.Value.ToString("HH:mm")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin registro</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.HoraEntrada.HasValue && item.HoraSalida.HasValue)
                                        {
                                            var horasTrabajadas = item.HoraSalida.Value.ToTimeSpan() - item.HoraEntrada.Value.ToTimeSpan();
                                            var horas = (int)horasTrabajadas.TotalHours;
                                            var minutos = horasTrabajadas.Minutes;

                                            <span class="badge bg-info">
                                                <i class="fas fa-hourglass-half"></i> @($"{horas}h {minutos}m")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.HoraEntrada.HasValue && item.HoraSalida.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Completo
                                            </span>
                                        }
                                        else if (item.HoraEntrada.HasValue)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> En curso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-question"></i> Incompleto
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <div>No hay registros de asistencia disponibles</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>