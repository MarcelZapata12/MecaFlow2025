@model IEnumerable<MecaFlow2025.Models.Asistencia>

@{
    ViewData["Title"] = "Registro de Asistencias";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-clock"></i> Registro de Asistencias
                    </h4>
                    <div>
                        <a href="@Url.Action("RegistroPersonal")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Registrar Asistencia
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Empleado</th>
                                    <th>Fecha</th>
                                    <th>Hora Entrada</th>
                                    <th>Hora Salida</th>
                                    <th>Horas Trabajadas</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @item.Empleado.Nombre.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold">@item.Empleado.Nombre</div>
                                                        <small class="text-muted">@item.Empleado.Puesto</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@item.Fecha.ToString("dd/MM/yyyy")</span><br>
                                                <small class="text-muted">@item.Fecha.ToString("dddd", new System.Globalization.CultureInfo("es-ES"))</small>
                                            </td>
                                            <td>
                                                @if (item.HoraEntrada.HasValue)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-sign-in-alt"></i> @item.HoraEntrada.Value.ToString("HH:mm")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Sin registro</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.HoraSalida.HasValue)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-sign-out-alt"></i> @item.HoraSalida.Value.ToString("HH:mm")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Sin registro</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.HoraEntrada.HasValue && item.HoraSalida.HasValue)
                                                {
                                                    
                                                        var horasTrabajadas = item.HoraSalida.Value.ToTimeSpan() - item.HoraEntrada.Value.ToTimeSpan();
                                                        var horas = (int)horasTrabajadas.TotalHours;
                                                        var minutos = horasTrabajadas.Minutes;
                                                    
                                                    <span class="badge bg-info">
                                                        <i class="fas fa-hourglass-half"></i> @($"{horas}h {minutos}m")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.HoraEntrada.HasValue && item.HoraSalida.HasValue)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Completo
                                                    </span>
                                                }
                                                else if (item.HoraEntrada.HasValue)
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-clock"></i> En curso
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-question"></i> Incompleto
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-3x mb-3"></i>
                                            <div>No hay registros de asistencia disponibles</div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 16px;
        font-weight: bold;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.05em;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.75rem;
    }
</style>