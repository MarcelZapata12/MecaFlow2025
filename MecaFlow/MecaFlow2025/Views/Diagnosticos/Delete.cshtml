@model MecaFlow2025.Models.Diagnostico

@{
    ViewData["Title"] = "Eliminar Diagnóstico";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4"><i class="bi bi-trash3"></i> Eliminar Diagnóstico</h2>

    <div class="alert alert-danger shadow-sm p-3">
        ¿Estás seguro que deseas eliminar el siguiente diagnóstico?
    </div>

    <dl class="row bg-light p-4 rounded shadow">
        <dt class="col-sm-3">Vehículo</dt>
        <dd class="col-sm-9">@Model.Vehiculo?.Placa</dd>

        <dt class="col-sm-3">Fecha</dt>
        <dd class="col-sm-9">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Detalle</dt>
        <dd class="col-sm-9">@Model.Detalle</dd>

        <dt class="col-sm-3">Empleado</dt>
        <dd class="col-sm-9">@Model.Empleado?.Nombre</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DiagnosticoId" />
        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>
        </div>
    </form>
</div>
