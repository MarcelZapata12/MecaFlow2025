@model MecaFlow2025.Models.Diagnostico
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #1f1f1f;
        color: #f8f9fa;
    }

    .modal-content {
        background-color: #2c2c2c;
        color: white;
        border-radius: 1rem;
        padding: 2rem;
        animation: fadeIn 0.5s ease-in-out;
    }

    .alert-warning {
        background-color: #ffc107;
        color: #212529;
        border: none;
        border-radius: 0.5rem;
    }

    dl dt {
        font-weight: bold;
        color: #adb5bd;
    }

    dl dd {
        margin-bottom: 1rem;
    }

    button {
        border-radius: 0.5rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #bb2d3b;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="text-center mb-4">
    <h4 class="text-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> Eliminar Diagnóstico
    </h4>
    <div class="alert alert-warning mt-3">
        <strong>¿Estás seguro que deseas eliminar este diagnóstico?</strong><br />
        Esta acción no se puede deshacer.
    </div>
</div>

<dl class="row text-start">
    <dt class="col-sm-4">Vehículo</dt>
    <dd class="col-sm-8">@Model.Vehiculo?.Placa</dd>

    <dt class="col-sm-4">Fecha</dt>
    <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-4">Detalle</dt>
    <dd class="col-sm-8">@Model.Detalle</dd>

    <dt class="col-sm-4">Empleado</dt>
    <dd class="col-sm-8">@Model.Empleado?.Nombre</dd>
</dl>

<form asp-action="Delete" asp-route-id="@Model.DiagnosticoId" method="post" class="d-flex justify-content-between mt-4">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
        <i class="bi bi-x-circle"></i> Cancelar
    </button>
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash-fill"></i> Confirmar Eliminación
    </button>
</form>
