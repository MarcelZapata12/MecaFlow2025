                            <a class="nav-link d-flex align-items-center gap-1" asp-controller="AcercaNosotros" asp-action="Index">
                                <i class="fas fa-circle-info"></i><span>Acerca de nosotros</span>
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i>
                                    <span>@Context.Session.GetString("UserEmail")</span>
                                    <span class="badge bg-dark">@Context.Session.GetString("UserRole")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Perfil</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                        else
