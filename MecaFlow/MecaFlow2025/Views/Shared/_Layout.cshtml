@using MecaFlow2025.Helpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MecaFlow2025</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MecaFlow2025.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #0f2027 !important;
            color: #f8f9fa;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .footer-custom {
            background-color: #0f2027 !important;
            border-top: none;
            color: #adb5bd;
        }

            .footer-custom a {
                color: #adb5bd;
                transition: color 0.3s ease;
            }

                .footer-custom a:hover {
                    color: #ffffff;
                    text-decoration: none;
                }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background: linear-gradient(to right, #003973, #005AA7);">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo-mecaflow.png" alt="Logo" style="height: 32px;" class="rounded shadow-sm" />
                    <strong>MecaFlow2025</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center gap-1" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i><span>Inicio</span>
                            </a>
                        </li>
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            @if (RoleHelper.IsAdmin(Context))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" data-bs-toggle="dropdown">
                                        <i class="fas fa-users"></i><span>Gestión de Usuarios</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Empleados" asp-action="Index"><i class="fas fa-user-tie"></i> Empleados</a></li>
                                        <li><a class="dropdown-item" asp-controller="Clientes" asp-action="Index"><i class="fas fa-user"></i> Clientes</a></li>
                                        <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="fas fa-users-cog"></i> Usuarios</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" data-bs-toggle="dropdown">
                                        <i class="fas fa-chart-bar"></i><span>Reportes</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Facturas" asp-action="Index"><i class="fas fa-file-invoice"></i> Facturas</a></li>
                                        <li><a class="dropdown-item" asp-controller="ReportesFinancieros" asp-action="Index"><i class="fas fa-chart-line"></i> Reportes Financieros</a></li>
                                        <li><a class="dropdown-item" asp-controller="CuentasClientes" asp-action="Index"><i class="fas fa-credit-card"></i> Cuentas Clientes</a></li>
                                    </ul>
                                </li>
                            }

                            @if (RoleHelper.IsAdmin(Context) || RoleHelper.IsEmployee(Context))
                            {
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center gap-1" asp-controller="Asistencias" asp-action="Index">
                                        <i class="fas fa-clock"></i><span>Asistencias</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center gap-1" asp-controller="Pagos" asp-action="Index">
                                        <i class="fas fa-money-bill-wave"></i><span>Pagos</span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Vehiculos" asp-action="Index">
                                    <i class="fas fa-car"></i><span>Vehículos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Diagnosticos" asp-action="Index">
                                    <i class="fas fa-stethoscope"></i><span>Diagnósticos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Chatbot" asp-action="Index">
                                    <i class="bi bi-robot"></i><span>Asistente Mecánico</span>
                                </a>
                            </li>
                            @if (RoleHelper.IsAdmin(Context))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog"></i><span>Configuración</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Marcas" asp-action="Index"><i class="fas fa-tag"></i> Marcas</a></li>
                                        <li><a class="dropdown-item" asp-controller="Modelos" asp-action="Index"><i class="fas fa-tags"></i> Modelos</a></li>
                                        <li><a class="dropdown-item" asp-controller="TareasVehiculos" asp-action="Index"><i class="fas fa-tasks"></i> Tareas Vehículos</a></li>
                                        <li><a class="dropdown-item" asp-controller="IngresosVehiculos" asp-action="Index"><i class="fas fa-sign-in-alt"></i> Ingresos Vehículos</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i>
                                    <span>@Context.Session.GetString("UserEmail")</span>
                                    <span class="badge bg-dark">@Context.Session.GetString("UserRole")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Perfil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i><span>Iniciar Sesión</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i><span>Registrarse</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="footer-custom text-center text-muted py-4">
        <div class="container">
            <div class="mb-2">
                <i class="bi bi-wrench-adjustable-circle-fill fs-3 text-primary me-2"></i>
                <span class="fw-bold text-white">MecaFlow2025</span>
            </div>
            <div>
                <small class="text-secondary">
                    &copy; 2025 MecaFlow2025 - Todos los derechos reservados ·
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="link-light text-decoration-underline">Privacidad</a>
                </small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>