                                    <a class="nav-link d-flex align-items-center gap-1" asp-controller="Asistencias" asp-action="Index">
                                        <i class="fas fa-clock"></i><span>Asistencias</span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Vehiculos" asp-action="Index">
                                    <i class="fas fa-car"></i><span>Vehículos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1" asp-controller="Diagnosticos" asp-action="Index">
                                    <i class="fas fa-stethoscope"></i><span>Diagnósticos</span>
                                </a>
                            </li>

                            @if (RoleHelper.IsAdmin(Context))
                            {
