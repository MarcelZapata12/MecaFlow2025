@using MecaFlow2025.Helpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MecaFlow2025</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MecaFlow2025.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-wrench"></i> MecaFlow2025
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Inicio
                            </a>
                        </li>

                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <!-- Menú para Administradores -->
                            @if (RoleHelper.IsAdmin(Context))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-users"></i> Gestión de Usuarios
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Empleados" asp-action="Index"><i class="fas fa-user-tie"></i> Empleados</a></li>
                                        <li><a class="dropdown-item" asp-controller="Clientes" asp-action="Index"><i class="fas fa-user"></i> Clientes</a></li>
                                        <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="fas fa-users-cog"></i> Usuarios</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-chart-bar"></i> Reportes
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Facturas" asp-action="Index"><i class="fas fa-file-invoice"></i> Facturas</a></li>
                                        <li><a class="dropdown-item" asp-controller="ReportesFinancieros" asp-action="Index"><i class="fas fa-chart-line"></i> Reportes Financieros</a></li>
                                        <li><a class="dropdown-item" asp-controller="CuentasClientes" asp-action="Index"><i class="fas fa-credit-card"></i> Cuentas Clientes</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- Menú para Empleados y Administradores -->
                            @if (RoleHelper.IsAdmin(Context) || RoleHelper.IsEmployee(Context))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Asistencias" asp-action="Index">
                                        <i class="fas fa-clock"></i> Asistencias
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Pagos" asp-action="Index">
                                        <i class="fas fa-money-bill-wave"></i> Pagos
                                    </a>
                                </li>
                            }

                            <!-- Menú para todos los usuarios autenticados -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Vehiculos" asp-action="Index">
                                    <i class="fas fa-car"></i> Vehículos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Diagnosticos" asp-action="Index">
                                    <i class="fas fa-stethoscope"></i> Diagnósticos
                                </a>
                            </li>

                            <!-- Menú adicional para Administradores -->
                            @if (RoleHelper.IsAdmin(Context))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog"></i> Configuración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Marcas" asp-action="Index"><i class="fas fa-tag"></i> Marcas</a></li>
                                        <li><a class="dropdown-item" asp-controller="Modelos" asp-action="Index"><i class="fas fa-tags"></i> Modelos</a></li>
                                        <li><a class="dropdown-item" asp-controller="TareasVehiculos" asp-action="Index"><i class="fas fa-tasks"></i> Tareas Vehículos</a></li>
                                        <li><a class="dropdown-item" asp-controller="IngresosVehiculos" asp-action="Index"><i class="fas fa-sign-in-alt"></i> Ingresos Vehículos</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Información del usuario -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i> @Context.Session.GetString("UserEmail")
                                    <span class="badge bg-primary">@Context.Session.GetString("UserRole")</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i> Perfil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Registrarse
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MecaFlow2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

