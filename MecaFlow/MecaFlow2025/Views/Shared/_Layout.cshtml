    @* ============ CHATBOT (solo si hay sesión) ============ *@
    @if (Context.Session.GetString("UserId") != null)
    {
        <style>
            .mf-chat-fab {
                position: fixed;
                right: 18px;
                bottom: 18px;
                z-index: 1055;
                width: 56px;
                height: 56px;
                border: none;
                border-radius: 50%;
                background: #0d6efd;
                color: #fff;
                box-shadow: 0 6px 20px rgba(0,0,0,.35)
            }

                .mf-chat-fab:hover {
                    filter: brightness(1.05)
                }

            .mf-chat-panel {
                position: fixed;
                right: 18px;
                bottom: 84px;
                z-index: 1055;
                width: 340px;
                max-width: 90vw;
                height: 460px;
                background: #0b1220;
                color: #e5e7eb;
                border: 1px solid #334155;
                border-radius: 12px;
                display: none;
                flex-direction: column
            }

            .mf-chat-header {
                padding: .75rem 1rem;
                background: #003973;
                border-bottom: 1px solid #005AA7;
                color: #fff;
                border-radius: 12px 12px 0 0
            }

            .mf-chat-body {
                flex: 1;
                overflow: auto;
                padding: 10px
            }

            .mf-chat-input {
                display: flex;
                gap: .5rem;
                padding: .6rem;
                border-top: 1px solid #334155
            }

                .mf-chat-input input {
                    flex: 1;
                    background: #101826;
                    border: 1px solid #334155;
                    color: #e5e7eb;
                    border-radius: 8px;
                    padding: .5rem
                }

            .mf-msg {
                max-width: 80%;
                margin: .35rem 0;
                padding: .5rem .65rem;
                border-radius: 10px;
                border: 1px solid #334155
            }

                .mf-msg.me {
                    margin-left: auto;
                    background: #0f2027
                }

                .mf-msg.bot {
                    background: #0b1220
                }
        </style>

        <button id="mfFab" class="mf-chat-fab" title="Asistente">
            <i class="bi bi-robot"></i>
        </button>
        <div id="mfPanel" class="mf-chat-panel" aria-live="polite" aria-label="Chat del taller">
            <div class="mf-chat-header d-flex justify-content-between align-items-center">
                <strong>Asistente del Taller</strong>
                <div class="d-flex gap-1">
                    <button type="button" class="btn btn-sm btn-outline-light" onclick="mfReset()" title="Reiniciar">
                        <i class="bi bi-arrow-clockwise"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-light" onclick="mfToggle()">×</button>
                </div>
            </div>
            <div id="mfBody" class="mf-chat-body"></div>
            <div class="mf-chat-input">
                <input id="mfInput" type="text" placeholder="Escribe tu consulta..." />
                <button id="mfSend" class="btn btn-primary btn-sm">Enviar</button>
            </div>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Script del chatbot (solo si hay sesión) *@
    @if (Context.Session.GetString("UserId") != null)
    {
        <script>
            const mfFab   = document.getElementById('mfFab');
            const mfPanel = document.getElementById('mfPanel');
            const mfBody  = document.getElementById('mfBody');
            const mfInput = document.getElementById('mfInput');
            const mfSend  = document.getElementById('mfSend');

            // Historial (solo mensajes del usuario)
            const mfHistory = [];
            let mfGreeted = false;

            // Identificador de conversación (se renueva al reiniciar)
            let mfChatId = (crypto.randomUUID ? crypto.randomUUID() : Date.now().toString());

            function mfToggle() {
                const show = mfPanel.style.display !== 'flex';
                mfPanel.style.display = show ? 'flex' : 'none';
                if (show && !mfGreeted) {
                    appendMsg('¡Hola! Soy el asistente del taller. ¿En qué te ayudo?', 'bot');
                    mfGreeted = true;
                }
                if (show) mfInput?.focus();
            }
            mfFab.addEventListener('click', mfToggle);

            function appendMsg(text, who) {
                const div = document.createElement('div');
                div.className = 'mf-msg ' + (who === 'me' ? 'me' : 'bot');
                div.innerText = text;
                mfBody.appendChild(div);
                mfBody.scrollTop = mfBody.scrollHeight;
            }

            function showTyping() {
                const n = document.createElement('div');
                n.id = 'mfTyping';
                n.className = 'mf-msg bot';
                n.innerText = 'Escribiendo…';
                mfBody.appendChild(n);
                mfBody.scrollTop = mfBody.scrollHeight;
            }
            function hideTyping() {
                const n = document.getElementById('mfTyping');
                if (n) n.remove();
            }

            // Reinicio total del chat
            async function mfReset() {
                mfHistory.length = 0;       // limpia historial
                mfBody.innerHTML = '';      // limpia UI
                mfGreeted = false;          // permite mostrar saludo de nuevo
                mfChatId = (crypto.randomUUID ? crypto.randomUUID() : Date.now().toString()); // nueva conversación

                // (Opcional) avisa al servidor
                try { await fetch('/api/chat/reset', { method: 'POST', credentials: 'same-origin' }); } catch {}

                appendMsg('Chat reiniciado. ¿En qué te ayudo?', 'bot');
            }

            async function sendMsg() {
                const text = mfInput.value.trim();
                if (!text) return;

                appendMsg(text, 'me');

                // Guarda solo el mensaje del usuario
                mfHistory.push({ role: 'user', content: text });
                while (mfHistory.length > 12) mfHistory.shift();

                mfInput.value = '';
                mfSend.disabled = true;
                showTyping();

                try {
                    const resp = await fetch('/api/chat', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'same-origin',
                        body: JSON.stringify({ message: text, history: mfHistory, chatId: mfChatId })
                    });

                    if (!resp.ok) {
                        let extra = '';
                        try {
                            const j = await resp.json();
                            if (j) {
                                const parts = [];
                                if (j.error)  parts.push(j.error);
                                if (j.status) parts.push('#' + j.status);
                                if (j.detail) {
                                    const d = typeof j.detail === 'string' ? j.detail : JSON.stringify(j.detail);
                                    parts.push((d || '').slice(0, 180) + (d && d.length > 180 ? '…' : ''));
                                }
                                extra = parts.join(' — ');
                            }
                        } catch {}
                        appendMsg(`Error HTTP ${resp.status}${extra ? ': ' + extra : ''}`, 'bot');
                        console.error('POST /api/chat failed', resp.status, extra);
                        return;
                    }

                    const data = await resp.json();
                    const reply = data.reply || 'Lo siento, no pude responder.';
                    appendMsg(reply, 'bot');

                    // Importante: NO añadimos la respuesta del bot a mfHistory
                } catch (e) {
                    appendMsg('Error de red al contactar el asistente.', 'bot');
                    console.error(e);
                } finally {
                    hideTyping();
                    mfSend.disabled = false;
                    mfInput.focus();
                }
            }

            mfSend.addEventListener('click', sendMsg);
            mfInput.addEventListener('keydown', e => { if (e.key === 'Enter') sendMsg(); });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
