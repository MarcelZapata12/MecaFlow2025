@model MecaFlow2025.Models.Vehiculo
@{
    ViewData["Title"] = "Crear Vehículo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #fff;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .form-container {
        max-width: 600px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 1rem;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
        animation: fadeInUp 0.5s ease-in-out;
    }

    label {
        font-weight: bold;
        color: #66ccff;
    }

    .form-control, .form-select {
        background-color: #1c1c1c;
        border: 1px solid #444;
        color: #fff;
    }

        .form-control:focus, .form-select:focus {
            border-color: #66ccff;
            box-shadow: 0 0 0 0.2rem rgba(102, 204, 255, 0.25);
        }

    .btn-submit {
        background-color: #28a745;
        color: white;
        font-weight: bold;
        border-radius: 0.5rem;
        padding: 0.6rem 1.5rem;
    }

        .btn-submit:hover {
            background-color: #218838;
        }

    .btn-back {
        margin-left: 0.5rem;
    }
</style>

<div class="form-container">
    <h2 class="text-center mb-4"><i class="bi bi-truck-front me-2"></i>Registrar Vehículo</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Placa"></label>
            <input asp-for="Placa" class="form-control" />
            <span asp-validation-for="Placa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MarcaId"></label>
            <select asp-for="MarcaId" class="form-select" id="MarcaId" asp-items="ViewBag.Marcas">
                <option value="">Seleccione una marca</option>
            </select>
            <span asp-validation-for="MarcaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ModeloId"></label>
            <select asp-for="ModeloId" class="form-select" id="ModeloId">
                <option value="">Seleccione un modelo</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Anio"></label>
            <input asp-for="Anio" class="form-control" />
            <span asp-validation-for="Anio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ClienteId">Cliente</label>
            <select asp-for="ClienteId" asp-items="ViewBag.Clientes" class="form-select">
                <option value="">-- Seleccione un cliente --</option>
            </select>
            <span asp-validation-for="ClienteId" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-submit">
                <i class="bi bi-save me-1"></i>Crear
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-back">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('#MarcaId').change(function () {
            var marcaId = $(this).val();
            $('#ModeloId').empty().append('<option>Seleccione un modelo</option>');

            if (marcaId) {
                $.get('/Vehiculos/GetModelosPorMarca', { marcaId: marcaId }, function (data) {
                    $.each(data, function (i, modelo) {
                        $('#ModeloId').append('<option value="' + modelo.modeloId + '">' + modelo.nombre + '</option>');
                    });
                });
            }
        });
    </script>
}
