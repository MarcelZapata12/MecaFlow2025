@model IEnumerable<MecaFlow2025.Models.Vehiculo>
@{
    ViewData["Title"] = "Vehículos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background-color: #0f2027 !important;
        color: #fff;
    }


    .vehiculos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .vehiculo-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        animation: fadeIn 0.8s ease-in-out;
    }

    .vehiculo-card {
        background-color: #1f1f1f;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

        .vehiculo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.5);
        }

        .vehiculo-card h5 {
            color: #66ccff;
            font-weight: bold;
        }

    .vehiculo-info {
        font-size: 0.95rem;
        margin-bottom: 0.25rem;
    }

        .vehiculo-info i {
            margin-right: 6px;
            color: #aaa;
        }

    .vehiculo-actions {
        position: absolute;
        top: 1rem;
        right: 1rem;
        display: flex;
        gap: 0.75rem;
    }

        .vehiculo-actions a {
            font-size: 1.2rem;
            color: white;
            transition: transform 0.2s ease;
        }

            .vehiculo-actions a:hover {
                transform: scale(1.3);
            }

    .form-control, .btn {
        border-radius: 0.5rem;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="container py-5">
    <div class="vehiculos-header">
        <h2 class="text-white">
            <i class="bi bi-truck-front me-2"></i>Gestión de Vehículos
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Vehículo
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="filtroPlaca" class="form-control bg-dark text-white border-secondary" placeholder="Buscar por placa..." value="@ViewBag.FiltroPlaca" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i>
            </a>
        </div>
    </form>

    <div class="vehiculo-grid">
        @foreach (var v in Model)
        {
            <div class="vehiculo-card">
                <div class="vehiculo-actions">
                    <a asp-action="Details" asp-route-id="@v.VehiculoId" class="text-info" title="Ver detalles">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@v.VehiculoId" class="text-warning" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@v.VehiculoId" class="text-danger" title="Eliminar">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
                <h5><i class="bi bi-upc-scan me-1"></i>@v.Placa</h5>
                <div class="vehiculo-info"><i class="bi bi-building"></i><strong>Marca:</strong> @v.Marca?.Nombre</div>
                <div class="vehiculo-info"><i class="bi bi-car-front-fill"></i><strong>Modelo:</strong> @v.Modelo?.Nombre</div>
                <div class="vehiculo-info"><i class="bi bi-calendar3"></i><strong>Año:</strong> @v.Anio</div>
                <div class="vehiculo-info"><i class="bi bi-person-fill"></i><strong>Cliente:</strong> @v.Cliente?.Nombre</div>
                <div class="vehiculo-info"><i class="bi bi-clock-history"></i><strong>Registrado:</strong> @v.FechaRegistro?.ToString("dd/MM/yyyy")</div>
            </div>
        }
    </div>
</div>
