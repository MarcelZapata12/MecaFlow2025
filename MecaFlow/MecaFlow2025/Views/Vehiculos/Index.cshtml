@model IEnumerable<MecaFlow2025.Models.Vehiculo>
@{
    ViewData["Title"] = "Vehículos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">
            <i class="bi bi-car-front-fill"></i> Vehículos
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nuevo Vehículo
        </a>
    </div>

    <!-- KPIs -->
    <div class="row text-white mb-4">
        <div class="col-md-3">
            <div class="card bg-primary shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Vehículos</h5>
                    <p class="display-6 fw-bold">@Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Última Fecha</h5>
                    <p class="display-6 fw-bold">
                        @Model.OrderByDescending(v => v.FechaRegistro).FirstOrDefault()?.FechaRegistro?.ToString("yyyy-MM-dd")
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Clientes Únicos</h5>
                    <p class="display-6 fw-bold">@Model.Select(v => v.Cliente?.Nombre).Distinct().Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Hoy Registrados</h5>
                    <p class="display-6 fw-bold">
                        @Model.Count(v => v.FechaRegistro?.Date == DateTime.Today)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla -->
    <table class="table table-dark table-striped table-hover text-center align-middle">
        <thead>
            <tr>
                <th>Placa</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Año</th>
                <th>Cliente</th>
                <th>Fecha Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr class="@(v.FechaRegistro?.Date == DateTime.Today ? "table-success" : "")">
                    <td>@v.Placa</td>
                    <td>@v.Marca</td>
                    <td>@v.Modelo</td>
                    <td>@v.Anio</td>
                    <td>@v.Cliente?.Nombre</td>
                    <td>@(v.FechaRegistro.HasValue ? v.FechaRegistro.Value.ToString("yyyy-MM-dd") : "")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@v.VehiculoId" class="btn btn-sm btn-info">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@v.VehiculoId" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@v.VehiculoId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
