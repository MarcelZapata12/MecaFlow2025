@model IEnumerable<MecaFlow2025.Models.Vehiculo>
@{
    ViewData["Title"] = "Vehículos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #1c1c1c, #2b2b2b, #121212);
        color: #fff;
        animation: gradient 12s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .vehiculos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .table-container {
        background-color: rgba(0,0,0,0.6);
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 25px rgba(0,0,0,0.3);
        animation: fadeInUp 0.7s ease;
    }

    .table th {
        color: #66ccff;
        border-bottom: 2px solid #66ccff;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .table tbody tr:hover {
        background-color: rgba(255,255,255,0.05);
        transition: background 0.3s;
    }

    .form-control, .btn {
        border-radius: 0.5rem;
    }

    .action-links a {
        margin-right: 0.5rem;
        transition: transform 0.2s ease;
        display: inline-block;
    }

        .action-links a:hover {
            transform: scale(1.1);
        }
</style>

<div class="container py-5">
    <div class="vehiculos-header">
        <h2 class="text-white">
            <i class="bi bi-truck-front me-2"></i>Gestión de Vehículos
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Vehículo
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="filtroPlaca" class="form-control bg-dark text-white border-secondary" placeholder="Buscar por placa..." value="@ViewBag.FiltroPlaca" />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i>
            </a>
        </div>
    </form>

    <div class="table-container">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Placa</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Año</th>
                    <th>Cliente</th>
                    <th>Fecha Registro</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr class="animate__animated animate__fadeInUp">
                        <td><strong>@v.Placa</strong></td>
                        <td>@v.Marca.Nombre</td>
                        <td>@v.Modelo.Nombre</td>
                        <td>@v.Anio</td>
                        <td>@v.Cliente.Nombre</td>
                        <td>@v.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                        <td class="text-center action-links">
                            <a asp-action="Details" asp-route-id="@v.VehiculoId" class="text-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@v.VehiculoId" class="text-warning">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@v.VehiculoId" class="text-danger">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
