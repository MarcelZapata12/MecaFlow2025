@model IEnumerable<MecaFlow2025.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        color: #f8f9fa;
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(13,110,253,.4);
        }

        70% {
            transform: scale(1.05);
            box-shadow: 0 0 0 10px rgba(13,110,253,0);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(13,110,253,0);
        }
    }

    /* Tarjetas */
    .employee-card {
        background-color: #1f1f1f;
        border: 1px solid #2c2c2c;
        color: white;
        border-radius: 1rem;
        transition: transform .3s ease, box-shadow .3s ease;
        margin-bottom: 1rem;
        position: relative;
        animation: fadeInUp .5s ease-in-out;
    }

        .employee-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,.3);
        }

    .employee-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1rem;
    }

    .form-control:focus {
        background-color: #2c2c2c;
        color: #fff;
        border-color: #66afe9;
        box-shadow: 0 0 0 .2rem rgba(102,175,233,.25);
    }

    .icon-btn {
        background: none;
        border: none;
        padding: 0;
        font-size: 1.25rem;
        color: inherit;
    }

    .action-icons {
        position: absolute;
        top: .75rem;
        right: 1rem;
        display: flex;
        gap: .75rem;
        z-index: 2;
    }

    .modal-content {
        background-color: #1f1f1f;
        color: white;
        animation: fadeIn .3s ease-in-out;
    }

    .btn-pulse {
        animation: pulse 2s infinite;
    }
</style>

<div class="container py-4">
    <!-- Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-white">
            <i class="bi bi-people-fill me-2"></i>Empleados
        </h2>
        <div class="d-flex align-items-center">
            <input id="empleadoSearch" type="search" class="form-control form-control-sm me-3 bg-dark text-white border-secondary" placeholder="Buscar por nombre, cédula o correo…">
            <a href="#" class="btn btn-primary btn-pulse" onclick="loadEmpleadoCreate()">
                <i class="bi bi-person-plus-fill me-1"></i>Nuevo Empleado
            </a>
        </div>
    </div>

    <!-- Grid de tarjetas -->
    <div id="empleadosGrid" class="employee-grid">
        @foreach (var e in Model)
        {
            <div class="employee-card card p-3">
                <div class="action-icons">
                    <a href="#" class="text-info icon-btn" title="Detalles" onclick="openEmpleadoDetails(@e.EmpleadoId)">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a href="#" class="text-warning icon-btn" title="Editar" onclick="loadEmpleadoEdit(@e.EmpleadoId)">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <button type="button" class="icon-btn text-danger" title="Eliminar" onclick="confirmEmpleadoDelete(@e.EmpleadoId)">
                        <i class="bi bi-trash-fill"></i>
                    </button>
                </div>

                <h5 class="card-title" style="color:#66ccff;font-weight:700;">
                    <i class="bi bi-person-badge me-1"></i>@e.Nombre
                </h5>

                <p class="card-text mb-1"><i class="bi bi-card-text me-1 text-secondary"></i>@e.Cedula</p>
                <p class="card-text mb-1"><i class="bi bi-envelope-fill me-1 text-secondary"></i>@e.Correo</p>
                <p class="card-text mb-1"><i class="bi bi-briefcase me-1 text-secondary"></i>@e.Puesto</p>
                <p class="card-text small text-muted">
                    <i class="bi bi-calendar-event me-1"></i>
                    @(e.FechaIngreso.HasValue? e.FechaIngreso.Value.ToString("dd/MM/yyyy") : "—")
                    &nbsp;•&nbsp;
                    <strong>Estado:</strong>
                    @(e.Activo ? "Activo" : "Inactivo")
                </p>
            </div>

            <!-- Modal Details por empleado -->
            <div class="modal fade" id="empleadoDetails-@e.EmpleadoId" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Detalles del Empleado</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body" id="empleadoDetailsBody-@e.EmpleadoId">
                            <p class="text-center">Cargando…</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Toast de éxito -->
<div class="toast align-items-center text-bg-success border-0 position-fixed bottom-0 end-0 m-3" id="toastSuccess" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">¡Acción realizada con éxito!</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
</div>

<!-- Modales comunes (Editar / Crear / Eliminar) -->
<div class="modal fade" id="empleadoEdit" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Editar Empleado</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body" id="empleadoEditBody"><p class="text-center">Cargando…</p></div>
        </div>
    </div>
</div>

<div class="modal fade" id="empleadoCreate" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Nuevo Empleado</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body" id="empleadoCreateBody"><p class="text-center">Cargando…</p></div>
        </div>
    </div>
</div>

<div class="modal fade" id="empleadoDelete" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Confirmar eliminación</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar este empleado?</p>
                <form id="empleadoDeleteForm" method="post">
                    <input type="hidden" name="id" id="empleadoDeleteId" />
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button class="btn btn-danger" onclick="submitEmpleadoDelete()">Eliminar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Búsqueda en vivo
        document.getElementById('empleadoSearch').addEventListener('input', function () {
            const q = this.value.toLowerCase();
            document.querySelectorAll('#empleadosGrid .employee-card').forEach(function (card) {
                const txt = card.innerText.toLowerCase();
                card.style.display = txt.includes(q) ? '' : 'none';
            });
        });

        // Crear
        function loadEmpleadoCreate() {
            const modal = new bootstrap.Modal(document.getElementById('empleadoCreate'));
            const body = document.getElementById('empleadoCreateBody');
            body.innerHTML = "<p class='text-center'>Cargando…</p>";
            modal.show();

            fetch(`/Empleados/Create`)
                .then(r => r.text())
                .then(html => { body.innerHTML = html; })
                .catch(() => { body.innerHTML = `<div class="alert alert-danger">Error al cargar el formulario</div>`; });
        }

        // Editar
        function loadEmpleadoEdit(id) {
            const modal = new bootstrap.Modal(document.getElementById('empleadoEdit'));
            const body = document.getElementById('empleadoEditBody');
            body.innerHTML = "<p class='text-center'>Cargando…</p>";
            modal.show();

            fetch(`/Empleados/Edit/${id}`)
                .then(r => r.text())
                .then(html => { body.innerHTML = html; })
                .catch(() => { body.innerHTML = `<div class="alert alert-danger">Error al cargar el formulario</div>`; });
        }

        // Detalles (modal por tarjeta)
        function openEmpleadoDetails(id) {
            const modalId = `empleadoDetails-${id}`;
            const bodyId = `empleadoDetailsBody-${id}`;
            const modal = new bootstrap.Modal(document.getElementById(modalId));
            const body = document.getElementById(bodyId);
            body.innerHTML = "<p class='text-center'>Cargando…</p>";
            modal.show();

            fetch(`/Empleados/Details/${id}`)
                .then(r => r.text())
                .then(html => { body.innerHTML = html; })
                .catch(() => { body.innerHTML = `<div class="alert alert-danger">Error al cargar detalles</div>`; });
        }

        // Eliminar
        function confirmEmpleadoDelete(id) {
            const modal = new bootstrap.Modal(document.getElementById('empleadoDelete'));
            document.getElementById('empleadoDeleteId').value = id;
            document.getElementById('empleadoDeleteForm').action = `/Empleados/Delete/${id}`;
            modal.show();
        }
        function submitEmpleadoDelete() {
            document.getElementById('empleadoDeleteForm').submit();
        }

        // Toast
        function showSuccessToast() {
            new bootstrap.Toast(document.getElementById('toastSuccess')).show();
        }
    </script>
}
