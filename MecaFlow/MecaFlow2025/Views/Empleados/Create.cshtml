@model MecaFlow2025.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
    Layout = null; // render limpio en modal
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
        color: #f8f9fa;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-container {
        background-color: #1f1f1f;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0,0,0,.3);
        animation: fadeInUp .6s ease-in-out;
        max-width: 600px;
        margin: 4rem auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #ffffff;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .form-control, .form-select {
        background-color: #2c2c2c;
        color: #fff;
        border: 1px solid #444;
    }

        .form-control:focus, .form-select:focus {
            background-color: #2c2c2c;
            border-color: #66afe9;
            box-shadow: 0 0 0 .2rem rgba(102,175,233,.25);
        }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }
</style>

<div class="form-container">
    <h1><i class="bi bi-person-plus-fill me-2"></i>Crear Empleado</h1>

    <!--
      Nota: este form será interceptado por hookCreateForm() en Index.cshtml,
      que hace POST por fetch y maneja HTML (errores) o JSON (éxito).
    -->
    <form asp-action="Create" asp-controller="Empleados" method="post" id="empleadoCreateForm">
        @Html.AntiForgeryToken()

        <!-- Resumen de validación del servidor -->
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Nombre -->
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
            <input asp-for="Nombre"
                   class="form-control"
                   required
                   maxlength="100"
                   autocomplete="name"
                   placeholder="Ej.: Juan Pérez" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <!-- Correo -->
        <div class="mb-3">
            <label asp-for="Correo" class="form-label fw-bold">Correo</label>
            <input asp-for="Correo"
                   class="form-control"
                   type="email"
                   required
                   maxlength="100"
                   autocomplete="email"
                   placeholder="usuario@dominio.com" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <!-- Cédula -->
        <div class="mb-3">
            <label asp-for="Cedula" class="form-label fw-bold">Cédula</label>
            <input asp-for="Cedula"
                   class="form-control"
                   required
                   maxlength="20"
                   inputmode="numeric"
                   placeholder="Solo números (9 a 12 dígitos)"
                   pattern="^\d{9,12}$" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>

        <!-- Puesto -->
        <div class="mb-3">
            <label asp-for="Puesto" class="form-label fw-bold">Puesto</label>
            <select asp-for="Puesto"
                    class="form-select"
                    required>
                <option value="">— Seleccione puesto —</option>
                <option value="Mecánico">Mecánico</option>
                <option value="Supervisor">Supervisor</option>
                <option value="Administrador">Administrador</option>
                <option value="Recepcionista">Recepcionista</option>
                <option value="Auxiliar">Auxiliar</option>
            </select>
            <span asp-validation-for="Puesto" class="text-danger"></span>
        </div>

        <!-- Activo -->
        <div class="mb-3 form-check">
            <input asp-for="Activo" class="form-check-input" />
            <label asp-for="Activo" class="form-check-label fw-bold">Activo</label>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-check-circle me-1"></i>Guardar
            </button>
            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                <i class="bi bi-x-lg me-1"></i>Cancelar
            </button>
        </div>
    </form>
</div>
