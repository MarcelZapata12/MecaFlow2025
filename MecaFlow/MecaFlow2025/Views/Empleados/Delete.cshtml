@model MecaFlow2025.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white">
            <i class="bi bi-trash-fill me-2"></i>Eliminar Empleado
        </h2>
        <p class="lead">¿Está seguro que desea eliminar este empleado?</p>
    </div>

    <div class="bg-dark text-white p-4 rounded-4 shadow-lg animate__animated animate__fadeInUp">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cedula)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Correo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Puesto)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Puesto)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaIngreso)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaIngreso)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Activo)</dt>
            <dd class="col-sm-9">
                @if (Model.Activo == true)
                {
                    <span class="badge bg-success px-3 py-2">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger px-3 py-2">Inactivo</span>
                }
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaRegistro)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="EmpleadoId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 shadow">
                    <i class="bi bi-x-circle-fill me-2"></i>Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 shadow">
                    <i class="bi bi-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
        </form>
    </div>
</div>
