@model MecaFlow2025.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
        color: #f8f9fa;
    }

    @@keyframes gradient {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    .form-container {
        background-color: #1f1f1f;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 0 15px rgba(0,0,0,.3);
        animation: fadeInUp .6s ease-in-out;
        max-width: 640px;
        margin: 4rem auto;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    h1 {
        text-align: center;
        margin-bottom: .5rem;
        color: #ffffff;
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .subtitle {
        text-align: center;
        color: #ffb3b3;
        margin-bottom: 1.25rem;
        font-weight: 600;
    }

    .details-label {
        font-weight: 600;
        color: #adb5bd;
    }

    .hr-soft {
        border-color: #2c2c2c;
        opacity: .8;
    }

    .btn-danger {
        box-shadow: 0 0 0 0 rgba(220,53,69,.4);
        border-radius: .5rem;
    }

        .btn-danger:hover {
            box-shadow: 0 0 0 .25rem rgba(220,53,69,.15);
        }

    .btn-secondary {
        border: none;
        border-radius: .5rem;
    }
</style>

<div class="form-container">
    <h1 style="color:#66ccff; font-weight:700;"><i class="bi bi-trash3-fill me-2"></i>Eliminar Empleado</h1>
    <div class="subtitle">¿Confirma eliminar este empleado?</div>
    <hr class="hr-soft" />

    <dl class="row">
        <dt class="col-sm-4 details-label">Nombre</dt>
        <dd class="col-sm-8">@Model.Nombre</dd>

        <dt class="col-sm-4 details-label">Cédula</dt>
        <dd class="col-sm-8">@Model.Cedula</dd>

        <dt class="col-sm-4 details-label">Correo</dt>
        <dd class="col-sm-8">@Model.Correo</dd>

        <dt class="col-sm-4 details-label">Puesto</dt>
        <dd class="col-sm-8">@Model.Puesto</dd>

        <dt class="col-sm-4 details-label">Activo</dt>
        <dd class="col-sm-8">@(Model.Activo ? "Sí" : "No")</dd>
    </dl>

    <hr class="hr-soft" />

    <form asp-action="Delete"
          asp-route-id="@Model.EmpleadoId"
          method="post"
          class="d-flex justify-content-between gap-2"
          onsubmit="return deleteEmpleado(this)">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="EmpleadoId" />

        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash3 me-1"></i>Eliminar
        </button>
        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
            <i class="bi bi-x-lg me-1"></i>Cancelar
        </button>
    </form>
</div>
