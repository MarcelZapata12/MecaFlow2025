@model MecaFlow2025.Models.Empleado
@{
    Layout = null;
}

<div class="p-4 bg-dark text-white rounded-4 shadow">
    <h4 class="mb-3 fw-bold text-info">
        <i class="bi bi-info-circle me-2"></i>Detalles del Empleado
    </h4>

    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Cédula:</strong> @Model.Cedula</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
    <p><strong>Puesto:</strong> @Model.Puesto</p>
    <p><strong>Fecha de Ingreso:</strong> @(Model.FechaIngreso?.ToString("dd/MM/yyyy") ?? "No especificado")</p>
    <p>
        <strong>Estado:</strong>
        @if (Model.Activo)
        {
            <span class="badge bg-success">Activo</span>
        }
        else
        {
            <span class="badge bg-danger">Inactivo</span>
        }
    </p>

    <div class="text-end mt-4">
        <button class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
            <i class="bi bi-x-circle me-1"></i>Cerrar
        </button>
    </div>
</div>
